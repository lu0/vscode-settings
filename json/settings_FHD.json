{
    "[python]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.defaultFormatter": "ms-python.python",
    },
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },    
    "[sql]": {
        "editor.defaultFormatter": "mtxr.sqltools"
    },    
    "terminal.integrated.experimentalRestore": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.copyOnSelection": true,
    "editor.find.autoFindInSelection": "multiline",
    "editor.find.cursorMoveOnType": false,
    "editor.autoClosingQuotes": "never",
    "editor.cursorStyle": "block",
    "editor.fontFamily": "Source Code Pro Medium",
    "terminal.integrated.fontFamily": "Source Code Pro Medium",
    "editor.fontSize": 16,
    "editor.minimap.maxColumn": 150,
    "editor.minimap.enabled": false,
    "editor.suggestSelection": "first",
    "editor.lineHeight": 26,
    "debug.console.fontSize": 16,
    "debug.console.historySuggestions": false,
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.letterSpacing": 1,
    // "workbench.colorTheme": "Monokai",
    "workbench.colorTheme": "Lu0: Dark Brown",  // local extension...
    "workbench.activityBar.visible": false,
    "window.menuBarVisibility": "hidden",
    "window.enableMenuBarMnemonics": false,
    "window.titleBarStyle": "native",
    // "window.titleBarStyle": "custom",
    "window.title": "${rootName}",
    "editor.renderWhitespace": "none",
    "editor.renderControlCharacters": false,
    "editor.wordWrap": "on",
    "vim.cursorStylePerMode.insert": "block",
    "vim.cursorStylePerMode.normal": "line",
    "vim.cursorStylePerMode.visual": "underline",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx1G -Xms100m -javaagent:\"~/.vscode/extensions/gabrielbb.vscode-lombok-1.0.1/server/lombok.jar\"",
    "workbench.editor.closeEmptyGroups": true,
    "zenMode.hideTabs": false,
    "keyboard.dispatch": "keyCode",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "outline.problems.badges": true,
    "window.zoomLevel": 0,
    "scm.diffDecorations": "none",
    "git.decorations.enabled": true,
    "problems.decorations.enabled": false,
    "customizeUI.fontSizeMap": {
        "13px": "15.5px",
        "12px": "14px",
        "tab-title": "15px", // Used for editor tab titles
        "monospace": "20px", // Used for monospace fonts in user interface
    },
    "customizeUI.font.regular": "WeblySleek UI Normal",
    "customizeUI.listRowHeight": 25, //22
    "customizeUI.activityBarHideSettings": true,
    "customizeUI.activityBar": "regular",
    "browser-preview.chromeExecutable": "/usr/bin/vivaldi",
    "browser-preview.format": "png",
    "browser-preview.startUrl": "github.com/lu0",
    "markdown.preview.fontSize": 16,
    "editor.columnSelection": false,
    "workbench.statusBar.visible": true,
    "files.associations": {
        "bashrc": "shellscript"
    },
    "python.languageServer": "Pylance",
    "editor.letterSpacing": 0.1,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "modifications",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "terminal.integrated.allowMnemonics": true,
    "workbench.iconTheme": "material-icon-theme",
    "sqltools.connectionExplorer.groupConnected": true,
    "sqltools.historySize": 1000,
    "sqltools.highlightQuery": true,
    "sqltools.format": {
        "reservedWordCase": "upper",
        "linesBetweenQueries": 2,
        "language": "sql",
    },
    "sqltools.results": {
        "customization": {
            "font-family": "Source Code Pro Medium",
            "font-size": "10"
        }
    },
    "jupyter.alwaysTrustNotebooks": true,
    "workbench.editor.tabCloseButton": "off",
    "explorer.autoReveal": "focusNoScroll",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "markdown.extension.tableFormatter.normalizeIndentation": true,
    "workbench.editorAssociations": [
        {
            "viewType": "default",
            "filenamePattern": "*.md"
        },
        {
            "viewType": "default",
            "filenamePattern": "*.svg"
        }
    ],
    "java.configuration.runtimes": [{
            "name": "JavaSE-15",
            "path": "/usr/lib/jvm/jdk-15.0.1+9",
            "default": false
        },
        {
            "name": "JavaSE-1.8",
            "path": "/usr/lib/jvm/jdk1.8.0_191",
            "default": true
        }
    ],
    "java.home": "/usr/lib/jvm/jdk-15.0.1+9",
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.enabled": false,
    "gitlens.statusBar.enabled": true,
    "gitlens.currentLine.format": "${id} ${date} ${authorNotYou} ${message}",
    "gitlens.hovers.enabled": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "extensions.ignoreRecommendations": true,
    "restoreTerminals.runOnStartup": false,
    "restoreTerminals.terminals": [
        {
            "splitTerminals": [
            {
                "name": "app: ssy",
                "commands": ["npm start"]
            },
            {
                "name": "app: ssy-icons",
                "commands": ["cd ssy-icons/vanilla-pkg/", "npm start"]
            },
            {
                "name": "back: ssy",
                "commands": ["cd ../admin/core/", "./run.sh"]
            },
            ]
        },
        {
            "splitTerminals": [
            {
                "name": "mysql",
                "commands": ["ssydb"]
            },
            ]
        },
        {
            "splitTerminals": [
            {
                "name": "ssy status",
                "commands": ["gstatus"]
            },
            {
                "name": "ssy git logs",
                "commands": ["glog -5", "git log -5 --format=fuller"]
            },
            ]
        },

      ]
}