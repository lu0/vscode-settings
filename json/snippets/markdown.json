{
	// Place your snippets for python here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"tab": {
		"prefix": "tab",
		"body": [
            "&emsp; ",
		],
		"description": "Insert an inline tab"
	},
	"whitespace": {
		"prefix": "white",
		"body": [
            "&nbsp; ",
		],
		"description": "Insert an inline space"
	},
	"snippet": {
		"prefix": "snippet",
		"body": [
			"```${1:language}",
			"${2}",
            "```",
			"${3}"
		],
		"description": "Insert a code block/snippet"
	},
	"Daily Meeting": {
		"prefix": "daily",
		"body": [
            "",
            "## $CURRENT_DATE/$CURRENT_MONTH/$CURRENT_YEAR ${1:Día de la semana...}",
            "### 08:45am-09:00am Daily Meeting",
            "- ¿Qué hice ayer?",
            "    - ${2:Ayer hice...}",
            "- ¿Qué haré hoy?",
            "    - ${3:Hoy haré...}",
            "- ¿Qué impedimentos tengo?",
            "    - ${4:De momento me detiene...}",
            "",
            " ${5}"
		],
		"description": "Insert description for daily meeting"
	},
	"TodayES": {
		"prefix": "todayes",
		"body": [
            "$CURRENT_DATE/$CURRENT_MONTH/$CURRENT_YEAR",
		],
		"description": "Insert today"
	},
	"TodayEN": {
		"prefix": "today",
		"body": [
            "$CURRENT_YEAR_SHORT-$CURRENT_MONTH-$CURRENT_DATE",
		],
		"description": "Insert today"
	},
	"Task":{
		"prefix": "task",
		"body": [
			"### ${1:HH}:${2:MM}${3:XM}-${4:HH}:${5:MM}${6:XM} ${7:Task Name}"
		],
		"description": "Insert Task"
	},
	"Complete Reference-style Link": {
		"prefix": "lnc",
		"body": [
			"[${1:text}][${2:number}]",
			"",
			"[${2}]: <https://${3:link}> '${4:alt text}'",
            ""
		],
		"description": "Complete Reference-style Link"
	},
	"Reference-style Link": {
		"prefix": "ln",
		"body": [
			"[${1:text}][${2:number}]",
		],
		"description": "Reference-style Link"
	},
	"Reference": {
		"prefix": "ref",
		"body": [
			"[${1}]: <https://${2:link}> '${3:alt text}'",
		],
		"description": "Insert Reference"
	},
	"Plain Link": {
		"prefix": "lnp",
		"body": [
			"[${1:text}](${2:link})",
		],
		"description": "Insert Link"
	},
	"Image": {
		"prefix": "img",
		"body": [
			"![${1:alt text}](${2:link})",
		],
		"description": "Insert Image"
	},
	"Table": {
		"prefix": "table",
		"body": [
			"| ${1}  |   |",
			"|---|---|",
			"|   |   |",
			"|   |   |",
		],
		"description": "Insert Image"
	}
}